unit Cadastro;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls,idHashSHA, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.StdCtrls,
  FMX.Objects, FMX.Controls.Presentation, FMX.Layouts;


type
  TForm1 = class(TForm)
    Layout1: TLayout;
    Layout2: TLayout;
    Layout3: TLayout;
    Layout4: TLayout;
    Layout5: TLayout;
    ToolBar1: TToolBar;
    Image1: TImage;
    TxtUsuario: TText;
    TxtSenha: TText;
    Label1: TLabel;
    Senha: TLabel;
    RoundReactConfirmar: TRoundRect;
    Label3: TLabel;
    Image2: TImage;
    Label2: TLabel;
    procedure RoundReactConfirmarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.fmx}

uses DM;

procedure TForm1.RoundReactConfirmarClick(Sender: TObject);
var senha:string;
begin
Db.FDQuery1.Close;
Db.FDQuery1.Open();

if(TxtUsuario.Text = EmptyStr) or (TxtSenha.Text = EmptyStr) then
Abort;
Db.FDQuery1.Append;
Db.FDQuery1usuario.AsString:=TxtUsuario.Text;
Db.FDQuery1senha.AsString:= SHA1(TxtSenha.Text);
Db.FDQuery1.Post;
Db.FDConnection1.CommitRetaining;
end;


function TForm1.SHA1(AsString: string): string;
var
senhaSHA1:TIDhASHsha1;
begin
 senhaSHA1:=TIDhASHsha1.Create;
 try
   Result:=senhaSHA1.hashStringAsHex(AsString);
 finally
      SenhaSHA1.Free;
 end;
end;

end.
